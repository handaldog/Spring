import org.springframework.stereotype.Component;

@Component
public class Reader {

	@Autowired
	@Qualifier("comicBook")
	private Book book;

//	public void setIndex(int index) {
//		this.index = index;
//	}
//	public void setBook(Book book) {
//		this.book = book;
//	} 

	public Reader(Book book) {
		this.book = book;
	}

	public void read() {
		System.out.println(book.getInfo() + "을(를) 열심히 읽습니다.");
	}

}
